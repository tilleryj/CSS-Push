require 'rake'
 
# gem 'git'
# require 'git'
 
begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "CSS-Push"
    gem.summary = "See updates you make to css files appear immediately in all of your browsers without having to refresh."
    gem.email = "tilleryj@thinklinkr.com"
    gem.homepage = "http://github.com/tilleryj/CSS-Push"
    gem.description = "See updates you make to css files appear immediately in all of your browsers without having to refresh."
    gem.authors = ["Jason Tillery", "Vishu Ramanathan"]
  end
rescue LoadError
  puts "Jeweler, or one of its dependencies, is not available. Install it with: sudo gem install jeweler"
end